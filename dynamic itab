
  DATA:
        ls_cob_pro        TYPE rsd_s_cob_pro,
        lr_struct_descr   TYPE REF TO cl_abap_structdescr,
        ls_component      TYPE abap_componentdescr,
        lt_components     TYPE abap_component_tab,
        lr_table_descr    TYPE REF TO cl_abap_tabledescr,
        wa_table          TYPE abap_compdescr,
        ls_data_txt       TYPE ty_data_txt,
        lv_table          TYPE string,
        lo_data_txt       TYPE REF TO data,
        lt_text           TYPE rstxttab,
        lv_langu          TYPE string.


  FIELD-SYMBOLS: <lo_data_txt>  TYPE ANY TABLE,
                 <fs_struc_component> TYPE any.
                 

      " Aus dem Text des InfoObjekte die Text Tabelle f체r den sp채teren Select ermitteln
      CALL FUNCTION 'RSD_CHKTAB_GET_FOR_CHA_BAS'
        EXPORTING
          i_chabasnm = ls_cob_pro-iobjnm
        IMPORTING
          e_txttab   = lt_text
        EXCEPTIONS
          name_error = 1
          OTHERS     = 2.

      " eine neue itab aus der Struktur der InfoObjekt-Texttabelle dynamisch erstellen.
      lr_struct_descr ?= cl_abap_structdescr=>describe_by_name( lt_text ).
      lr_table_descr ?= cl_abap_tabledescr=>create( p_line_type  = lr_struct_descr ).

      CREATE DATA lo_data_txt     TYPE HANDLE lr_table_descr.
      ASSIGN    lo_data_txt->*  TO <lo_data_txt>.

      " Pr체fen ob die Texttabelle des Infoobjekt Sprachabh채ngig ist.
      lv_langu = 0.
      LOOP AT lr_struct_descr->components INTO wa_table .
        IF wa_table-name EQ 'LANGU'.
          lv_langu = 1.
        ENDIF.
      ENDLOOP.

      IF lv_langu EQ 1.
        SELECT * FROM (lt_text) INTO CORRESPONDING FIELDS OF TABLE <lo_data_txt> WHERE langu EQ 'DE'.
      ELSE.
        SELECT * FROM (lt_text) INTO CORRESPONDING FIELDS OF TABLE <lo_data_txt>.
      ENDIF.
